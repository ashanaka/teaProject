
<div class="row">
    {{#each employees}}
    <div class="col-sm-6">
        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <a class="btn btn-dark btn-block mb-2" href="/employees/edit/{{id}}">Edit</a>
                <form method="post" action="/ideas/{{id}}?_method=DELETE">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="submit" class="btn btn-danger btn-block" value="Delete">
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <p>No employees listed</p>
    {{/each}}
</div>